@model ABCRetailers.Models.ViewModels.CartPageViewModel
<h2 class="mb-4">@ViewData["Title"]</h2>
@if (!Model.Items.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <form asp-action="UpdateQuantities" method="post">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th style="width:120px;">Quantity</th>
                    <th>Unit Price</th>
                    <th>Subtotal</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];
                    <tr>
                        <td>@item.ProductName</td>
                        <td>
                            <input type="hidden" name="items[@i].ProductId" value="@item.ProductId" />
                            <input type="number" name="items[@i].Quantity" value="@item.Quantity" min="1" class="form-control" />
                        </td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@item.Subtotal.ToString("C")</td>
                        <td>
                            <!-- Use a button that submits to Remove action via JavaScript -->
                            <button type="button" class="btn btn-danger btn-sm"
                                    onclick="removeItem('@item.ProductId')">
                                <i class="fas fa-trash-alt"></i> Remove
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="fw-bold">
                <tr>
                    <td colspan="3" class="text-end">Total</td>
                    <td colspan="2">@Model.Total.ToString("C")</td>
                </tr>
            </tfoot>
        </table>
        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-sync-alt"></i> Update Cart
            </button>
        </div>
    </form>

    <!-- Separate Checkout form -->
    <form asp-action="Checkout" method="post" class="mt-3">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-credit-card"></i> Checkout
        </button>
    </form>

    <!-- Hidden form for removing items -->
    <form id="removeForm" asp-action="Remove" method="post" style="display:none;">
        <input type="hidden" id="removeProductId" name="productId" />
    </form>

    <script>
        function removeItem(productId) {
            document.getElementById('removeProductId').value = productId;
            document.getElementById('removeForm').submit();
        }
    </script>
}




